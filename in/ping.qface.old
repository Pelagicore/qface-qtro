module games.ping 1.0

interface Game {
    readonly Board board;
    readonly Score score;
    readonly Position padA;
    readonly Position padB;
    readonly Position ball;
    readonly GameStatus status;
    void updateBall(int xpos, int ypos);
    void updatePadA(int ypos);
    void updatePadB(int ypos);
    void playGame();
    void stopGame();
}

enum GameStatus {
    Init,
    Welcome,
    Playing,
    Result
}

struct Board {
    int width;
    int height;
}

struct Position {
    int x;
    int y;
}

struct Score {
    int playerA;
    int playerB;
}